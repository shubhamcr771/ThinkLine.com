<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <header
        class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom"
      >
        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none"
        >
          <h1 class="px-5 btn-dark">ThinkLine.</h1>
        </a>
        <a
          href="/list"
          class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none"
        >
          <h1 class="px-5 btn-dark text-body-emphasis">Blogs</h1>
        </a>
      </header>

      <h1
        class="display-2 py-5 text-center fw-bold btn-dark text-body-emphasis"
      >
        Blog List
      </h1>
      <ul class="list-unstyled text-body-secondary text-center py-5 display-5">
        <% blogPosts.forEach(post => { %>
        <li>
          <a
            class="fw-bold"
            style="text-decoration: none"
            href="/posts/<%= post.id %>"
            ><%= post.title %></a
          >
          <a href="/posts/<%= post.id %>/edit" class="btn btn-warning me-2"
            >Edit</a
          >
          <a href="/posts/<%= post.id %>/delete" class="btn btn-danger"
            >Delete</a
          >
        </li>
        <% }); %>
      </ul>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-hV+kIeGR8tJOdVIqDjBngb49/j1K8LJZOZUJcI9pjJ1uoGpFVk5YbL8Yfo0I++pD"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
